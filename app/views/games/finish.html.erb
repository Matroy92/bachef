<div class="result-body">
  <div class="result">
    <% result = @calories - @game.calories %>
    <% if (-100..100).include? result %>
      <h1>FÃ©licitations ! &#128540;</h1>
      <h5> Ton deck contient <strong class="win"><%=@calories%></strong> calories, sur un objectf de <strong class="cal-obj"><%=@game.calories%></strong> </h5>
    <% else %>
      <h1>Peux mieux faire... &#128556;</h1>
      <h5> Ton deck contient <strong class="fail"><%=@calories%></strong> calories, sur un objectf de <strong class="cal-obj"><%=@game.calories%></strong> </h5>
    <%end%>
  </div>
   <div data-controller="edit-game">
    <div>
      <h3>Voici ton deck de cartes, sauvegarde le  <span><i class="fas fa-pen fa-xs pen-cursor" data-action="click->edit-game#displayForm" ></i></span></h3>
    </div>
    <div class="save-form">
      <%= form_for @game, url: saved_game_path(@game), :html => {:class => " d-none form-horizontal center", data: { edit_game_target: 'form'}} do |f| %>
      <div class="form-group">
        <%= f.label :title, "Titre:", class: "control-label" %>
        <div>
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :content, "Description:", class: "control-label" %>
        <div>
          <%= f.text_area :content, class: "form-control" %>
        </div>
      </div>
      <%= f.submit "Sauvegarder", class: "btn btn-default btn-primary" %>  
      <% end %>
    </div>
  </div>
  <div class="card-result">
    <% @game.cards.each do |card|%>
    <%= render "cards/card", card: card%>
  <%end%>
  </div>
  <div class="recipe-container">
    <% @recipes.first(3).each do |recipe|%>
    <%= render "recipe/recipe_card", recipe: recipe%>
  <%end%>
  </div>
</div>