<!DOCTYPE html>
<html>
  <head>
    <title>Bachef</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
  <div class="navbar-lewagon navbar-collapse navbar-bachef">
  <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "bachef_logo2.png" %>
  <% end %>
    <%= link_to root_path, class: "navbar-shop" do %>
      <%= image_tag "shopping-cart.png" %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
    <div class="navbar-lewagon navbar-collapse navbar-brand navbar-bachef">
        <% if user_signed_in? %>
        <li class="nav-item dropdown">
            <%= image_tag "jfp.png", class: "avatar-bordered", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Sign out",  destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
        </li>
      <% else %>
        <li class="nav-item">
            <%= link_to "Sign in", new_user_session_path, class: "btn btn-outline-info" %>
        </li>
        <li class="nav-item">
            <%= link_to "Sign up", new_user_registration_path, class: "btn btn-outline-info" %>
        </li>
      <% end %>
      </li>
    </ul>
  </div>
</div>
    <%= yield %>
  </body>
</html>
