<div class="d-flex" id="head">
  <div class="container-card">
    <div class="container-grid-home">
        <div class="form-bloc">
            <div class="video-title">
            <h1>B a Chef !</h1>
              <h5 class="baseline">A vous de trouver ce que vous allez manger ce soir ! </h5>
            </div>
            <div class="container-form justify-content-between" id="game_new">
              <%= form_for @game, html: { class: "d-flex align-items-center"} do |f| %>
                <div class="d-flex">
                  <%= f.select(:objective, %w(Vegan Végétarien Equilibré Gras), {:include_blank => "J'ai envie de manger"}, { :class => "input-home"})%>
                </div>
                <%# <div class="d-flex"> %>
                  <div class="quantity-block">
                    <div class="quantity-arrow-minus">
                      <div> - </div>    
                    </div>
                    <div class="quantity-arrow-plus">
                      <div> + </div>
                    </div>
                      <%= f.number_field :calories, class: "input-home-calories quantity-num", value: 1000 %>
                  </div>
                <%# </div> %>
              <div class="text-center">
              <h2 class="btn-bachef">C'est parti !</h2>
              </div>
              <% end %>
            </div>
        </div>
      <%# <section id="index"> %>
        <div class="banner-home">
          <%= image_tag "cooking-home.gif", class: "home-video", id: "video"%>
        </div>
      <%# </section> %>
    </div>
  </div>
</div>
